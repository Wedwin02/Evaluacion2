<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/lblVista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:background="?attr/colorButtonNormal"
        android:backgroundTint="#0D120D"
        android:fontFamily="@font/letra"
        android:textAlignment="textEnd"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/background_dark"
        android:backgroundTint="@android:color/background_dark"
        android:fontFamily="@font/letra"
        android:textAlignment="textEnd"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30dp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="173dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btnAC"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="AC"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/btnSiete"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="7"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/btnCuatro"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="4"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/btnUno"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="1"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="173dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btnDEL"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="DEL"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/btnOcho"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="8"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/btnCinco"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="5"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/btnDos"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="2"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="173dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btnSuma"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="+"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/btnNueve"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="9"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/btnSeis"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="6"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/btnTres"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="3"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="173dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btnResta"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="-"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/btnDiv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="/"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/btnMulti"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="*"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/btnIgual"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="="
                                    android:textSize="25dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="173dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btnpa"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="("
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:visibility="visible"
                                    tools:visibility="visible" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="173dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btnpe"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text=")"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:visibility="visible"
                                    tools:visibility="visible" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="173dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btnpunto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/colorplantilla"
                                    android:fontFamily="@font/letra"
                                    android:gravity="center"
                                    android:text="."
                                    android:textColor="@drawable/txtcambios"
                                    android:textSize="35dp"
                                    android:textStyle="bold"
                                    android:visibility="visible"
                                    tools:visibility="visible" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btnCero"
                                    android:layout_width="173dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/colorplantilla"
                                    android:textColor="@drawable/txtcambios"
                                    android:fontFamily="@font/letra"
                                    android:text="0"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>